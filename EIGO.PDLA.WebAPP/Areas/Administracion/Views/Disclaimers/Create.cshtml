@model EIGO.PDLA.WebAPP.Areas.Administracion.DTO.DisclaimerDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Disclaimer</h1>


<hr />
<div class="row">
    <div class="col">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-2" >
                <label asp-for="IdProceso" class="control-label"></label>
                <select asp-for="IdProceso" class="form-control" asp-items="ViewBag.IdProceso" disabled="disabled"></select>
                <input asp-for="IdProceso" type="hidden" value="@ViewBag.SelectedValue" />
            </div>
            <div class="row m-2 align-items-center">
                <div class="col-4">
                    <label asp-for="Titulo" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Titulo" class="form-control" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
            </div>
            <div class="row m-2 align-items-center">
                <div class="col-4">
                    <label asp-for="Texto" class="control-label"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="Texto" class="form-control"></textarea>
                    <span asp-validation-for="Texto" class="text-danger"></span>
                </div>

            </div>

            <div class="text-center m-3">
                <input onClick="this.form.submit(); this.disabled=true; this.value='Creando…'; " style="    width: 90px;" value="Crear" class="btn btn-primary m-2" />
                @*<a asp-action="edit" asp-controller="procesos" asp-route-id="@ViewBag.SelectedValue" class="btn btn-secondary">Cancelar</a>*@
                 <a href="@Url.Action("Edit","Procesos", new {id = @ViewBag.SelectedValue, idTabs="disclaimers" })" class="btn btn-secondary m-2">Cancelar</a>
            </div>
        </form>
    </div>
</div>
@*// TODO: Dónde está este script?*@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
