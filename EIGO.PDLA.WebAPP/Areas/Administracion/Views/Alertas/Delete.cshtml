@model EIGO.PDLA.WebAPP.Areas.Administracion.DTO.AlertaDto

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Confirma que desea eliminar la siguiente alerta?</h3>
<div>
    <h4>Alerta</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Asunto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Asunto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SubTitulo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubTitulo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cuerpo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cuerpo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AvisoConfidencialidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AvisoConfidencialidad)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdAlerta" />
        <input onClick="this.form.submit(); this.disabled=true; this.value='Eliminando…'; " style="    width: 100px;" value="Eliminar" class="btn btn-danger" /> |
        @*<a asp-action="edit" asp-controller="procesos" asp-route-id="@Model.IdProceso" class="btn btn-secondary">Regresar</a>*@
        @if (ViewBag.Editable)
        {
            <a href="@Url.Action("Edit","Procesos", new {id =Model.IdProceso, idTabs="alertas" })" class="btn btn-secondary m-2">Regresar</a>
        }
        else
        {
            <a href="@Url.Action("Details","Procesos", new {id =Model.IdProceso, idTabs="alertas" })" class="btn btn-secondary m-2">Regresar</a>
        }
    </form>
</div>
